			<% if(empData.length != 0){ 
			empData.forEach(function(employee){ %>
			<option value = "<%= employee.employee_id %>" ><%= employee.first_name %> </option>
		<%  }) %>		
		<% } else { %>
		<option > No Employees </option>
		<% } %>
	</select>
		
	</div>


 	<div class = "w3-col m4 l4 w3-container" style = "margin-top: 15px;" > <!-- Start of Column 2-->


 <!-- Client Section -->
<div class = "col-container" style = "display: table; width: 100%;">


 	 <div class = "w3-container w3-theme-l2" style = "display: table-cell; text-align: center; vertical-align: middle; width: 120px;">
